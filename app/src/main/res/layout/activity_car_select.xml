<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Car_Select_Activity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/basecolor"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/shape_select" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/basecolor"
            android:layout_alignTop="@+id/basecolor"
            android:layout_alignRight="@id/basecolor"
            android:layout_alignBottom="@id/basecolor"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="자신의 차량의 종류를 선택하세요"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/hallymgothic_bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/basecolor"
            android:layout_alignTop="@+id/basecolor"
            android:layout_alignRight="@id/basecolor"
            android:layout_alignBottom="@id/basecolor"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="차량에 맞는 정보를 추천해드립니다"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/hallymgothic_medium"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp">

        <Button
            android:id="@+id/Car1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="경유"
            android:textSize="20dp"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/lightgray"
            android:textColor="@color/black"
            android:drawableBottom="@drawable/diesel_icon_resize"
            android:fontFamily="@font/hallymgothic_bold"/>

        <Button
            android:id="@+id/Car2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="휘발유"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/lightgray"
            android:textColor="@color/black"
            android:drawableBottom="@drawable/gasoline_icon_resize"
            android:fontFamily="@font/hallymgothic_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp">

        <Button
            android:id="@+id/Car3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="전기(준비중)"
            android:textSize="20dp"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:drawableBottom="@drawable/electric_icon_resize"
            android:fontFamily="@font/hallymgothic_bold"/>

        <Button
            android:id="@+id/Car4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="수소(준비중)"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:drawableBottom="@drawable/hydrogen_icon_resize"
            android:fontFamily="@font/hallymgothic_bold"/>

    </LinearLayout>


</LinearLayout>